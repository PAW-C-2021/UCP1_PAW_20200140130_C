@model IEnumerable<UCP_PAW_1.Models.Mapel>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Data Mata Pelajaran</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Nama Mapel
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NamaMapel)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.IdMapel"><i class="fa fa-marker fa-lg"></i></a> |
                <a asp-action="Details" asp-route-id="@item.IdMapel"><i class="fas fa-list"></i></a> |
                <a asp-action="Delete" asp-route-id="@item.IdMapel"><i class="fa fa-trash-alt fa-lg"></i></a>
            </td>
        </tr>
}
    </tbody>
</table>
