@model IEnumerable<UCP_PAW_1.Models.Siswa>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Data Siswa</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Nis
            </th>
            <th>
                Nama Siswa
            </th>
            <th>
                Alamat Siswa
            </th>
            <th>
                No Hp
            </th>
            <th>
               Id Kelas
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nis)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NamaSiswa)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AlamatSiswa)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NoHp)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdKelasNavigation.IdKelas)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.IdSiswa"><i class="fa fa-marker fa-lg"></i></a> |
                <a asp-action="Details" asp-route-id="@item.IdSiswa"><i class="fas fa-list"></i></a> |
                <a asp-action="Delete" asp-route-id="@item.IdSiswa"><i class="fa fa-trash-alt fa-lg"></i></a>
            </td>
        </tr>
}
    </tbody>
</table>
